{
    "buildCommand": "pnpm install && cd apps/backend && npx prisma generate && npm run build && cd ../frontend && pnpm run build",
    "devCommand": "turbo run dev",
    "installCommand": "pnpm install",
    "outputDirectory": "apps/frontend/dist",
    "framework": null,
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api"
        },
        {
            "source": "/((?!api|assets|favicon.ico|.*\\..*).*)",
            "destination": "/index.html"
        }
    ]
}