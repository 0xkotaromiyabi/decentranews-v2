{
    "name": "decentranews-monorepo",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "clean": "rm -rf apps/backend/dist apps/frontend/dist",
        "deploy": "pnpm clean && npx vercel --prod"
    },
    "devDependencies": {
        "prettier": "latest",
        "turbo": "^2.7.4"
    },
    "packageManager": "pnpm@9.15.4",
    "type": "module"
}
