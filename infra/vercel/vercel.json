{
    "version": 2,
    "builds": [
        {
            "src": "apps/backend/src/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "apps/frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "apps/backend/src/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "apps/frontend/$1",
            "continue": true
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}